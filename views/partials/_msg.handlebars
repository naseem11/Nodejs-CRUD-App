{{#if success_msg}}
<div class="alert w-50 mx-auto alert-success alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    {{success_msg}}
</div>
{{/if}}

{{#if error_msg}}
<div class="alert  w-50 mx-auto alert-danger alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    {{error_msg}}
</div>
{{/if}}